<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/act_i"
        android:layout_width="@dimen/ly_25dp"
        android:layout_height="@dimen/ly_25dp"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/ly_mg_3dp"
        app:srcCompat="@drawable/ic_yellowcard" />

    <TextView
        android:id="@+id/act_t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/ly_mg_2dp"
        android:layout_toEndOf="@+id/act_i"
        android:text="action_type"
        android:textColor="@android:color/white"
        android:textSize="@dimen/tx_12sp" />
</RelativeLayout>